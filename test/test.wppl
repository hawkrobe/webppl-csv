// Examples 3 & 4
// write an erp
var myBinomial = Enumerate(function(){
	var a = flip(0.5)
	var b = flip(0.9)
	return {a: a,
			b: b,
			"A&B": a+b}
})

var erp_file = "erp_output.csv"
var output_handle = webpplCsv.openFile(erp_file)

// writeMarginals will automatically marginalize the erp, writing one variable per line
// webpplCsv.writeMarginals(output_handle, myBinomial)

// writeJoint will maintain the joint distributional information
webpplCsv.writeJoint(output_handle, myBinomial)

webpplCsv.closeFile(output_handle)